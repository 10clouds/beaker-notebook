.message(ng-if="message") {{message}}
br
form.sign-in(ng-submit="submit()")
  label(for="user-email") username
  br
  input(ng-model="user.email", type="email", name="email", placeholder="Email", id="user-email")
  br
  label(for="user-password") password
  br
  input(ng-model="user.password", type="password", name="password", placeholder="Password", id="user-password")
  br
  input.btn.alt.mid(type="submit", value="Sign in")

.loading(ng-if="loading")
  .spinner(us-spinner="{lines: 12, radius:5, width:3, length: 5, corners: 0, speed: 0.6, trail: 40, color: '#3f5264'}")
