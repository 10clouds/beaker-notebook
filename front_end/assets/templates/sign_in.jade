h1 {{message}}
br
form.sign-in(ng-submit="submit()")
  input(ng-model="user.email", type="email", name="email", placeholder="Email")
  br
  input(ng-model="user.password", type="password", name="password", placeholder="Password")
  input(type="submit", value="Sign in")
br

a(ui-sref="signUp") Create account

.loading(ng-if="loading")
  .spinner(us-spinner="{lines: 12, radius:5, width:3, length: 5, corners: 0, speed: 0.6, trail: 40, color: '#3f5264'}")

