input.search.full.publication-search(ng-model="publications.search", ng-model-options="{ debounce: {'default': 500, 'blur': 0} }", placeholder="Search published notebooks...")

.sidebar-box.sidebar-tree
  h3 Browse Categories
  ul.sidebar-box-list.publication-categories
    li
      a.sidebar-box-list-link.category(ng-class="publications.currentCategory == null && 'active'", ng-click="filterByCategory(null)") All
    li(ng-repeat="category in publications.categories | orderBy:'name'")
      a.sidebar-box-list-link.category(ng-class="publications.currentCategory == category['public-id'] && 'active'", ng-click="filterByCategory(category['public-id'])")
        span.left {{category.name}}
        span.right.count {{category.count}}
