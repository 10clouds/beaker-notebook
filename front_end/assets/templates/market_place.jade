h1 Bunsen marketplace

.col-three-quarters
  h4 {{(marketPlace.data | filter:filterBy).length}} results
  .col-half
    .label-pair.col-three-quarters
      label
        b vendors
      br
      select(multiple="multiple", ng-model="marketPlace.vendorScope" ng-options="vendor.id as vendor.name for vendor in marketPlace.vendors")

    .label-pair.col-quarter
      label
        b format
      br
      select(multiple="multiple", ng-model="marketPlace.typeScope" ng-options="format for format in formats")

  .col-half
    .label-pair.col-half
      label
        b tags
      br
      select(multiple="multiple", ng-model="marketPlace.tagScope" ng-options="tag.id as tag.name for tag in marketPlace.relatedTags")

    .label-pair.col-quarter
      label
        b search
      br
      input(type="text", ng-model="filterBy", placeholder="Search for Data")


  ul.cl.current-filters
    li.tag.filter(ng-repeat="filter in currentFilters", ng-click="removeFilter(filter.value, filter.model)") {{filter.name}} âœ–
  br
  br
  ul
    li(ng-repeat="item in marketPlace.data | filter:filterBy ")
      p
        .col-three-quarters
          a(ui-sref="marketPlace.items.item({id: item.id})") {{item.title}}
          p.description {{item.description | limitTo:100}}...
          .vendor Publisher: {{vendorName(item)}}
        .col-quarter
          .format Format: {{item.format}}
          .last-updated Updated: {{item.updatedAt | date: 'dd/MM/yyyy'}}
        .cl
      br

  br
  pagination(page="marketPlace.currentPage" max-size="marketPlace.maxSize" items-per-page="marketPlace.itemsPerPage" total-items="marketPlace.totalItems")

.cl
