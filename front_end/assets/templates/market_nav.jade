input.search.full(ng-model="marketPlace.searchTerm", placeholder="Search datasets and tools")

h3.sidebar-box-header explore datasets
.sidebar-box.sidebar-tree
  treecontrol.tree-market-category.tree-classic(
    tree-model="treeData",
    options="treeOptions",
    on-selection="onTreeSelection(node)",
    selected-node="marketPlace.currentCategory")

    item: {{node.category}}
    span.tree-category-count.right {{node.count}}

h3.sidebar-box-header related sets
.sidebar-box.sidebar-related-tags
  dl.related-tags(ng-class="expanded ? '' : 'related-tags-hidden'")
    dt.related-tag(ng-repeat="tag in marketPlace.relatedTags")
      a.tag-name(ng-click="searchByTag(tag)") {{tag.name}}
      span(ng-show='isTagSelected(tag)') *
  .related-tags-visibility
    a.related-tags-show-all.right(ng-click="$parent.expanded = !$parent.expanded", ng-if="checkRelatedSetHeight()")
      span(ng-if="expanded") Collapse
      span(ng-if="!expanded") Show all
    .cl
