.main-content.market-item(ng-if="item.metadata.title")
  .btn.btn-light.return-to-market-search(ui-sref="{{referrerList}}") Back to List
  .item-hero
    h1 {{item.metadata.title}}
    p.description {{item.metadata.description}}

    .details
      .col-three-quarters.col-outside
        a.vendor(ng-click="searchByVendor(item.metadata.vendor)") {{item.metadata.vendor}}
          span.text-blue &nbsp; &raquo;
      .col-quarter.col-outside
        .right.btn.btn-primary.subscribe(ng-click="subscribed ? unsubscribe() : subscribe()") {{subscribed ? "unsubscribe" : "subscribe"}}
      .cl

  .subscribed-confirm(ng-if="subscribed")
    p Thank you for subscribing. The data is accessible in the file&nbsp;
      span.file-path {{item.metadata.remoteFile | dataSetPath}}
      &nbsp;
      | from within any Notebook.

  section.properties
    h1 Properties

    ul.property-list
      li
        .label format
        .value.top-border.format {{item.metadata.format}}

      li
        .label released
        .value {{item.lastUpdated | date: 'shortDate'}}

      li
        .label updated
        .value {{item.lastUpdated | date: 'shortDate'}}

      li
        .label frequency
        .value.update-frequency {{item.metadata.updateFrequency}}

      li(ng-if="item.categories")
        .label categories
        .value.categories {{item.categories | names}}

      li(ng-if="item.metadata.startDate")
        .label start date
        .value.start-date {{item.metadata.startDate | date: 'shortDate'}}

      li(ng-if="item.metadata.tags")
        .label tags
        .value.tags
          span(ng-repeat="tag in item.metadata.tags") {{tag}}{{$last ? '' : ', '}}

  datasheet-preview(item="item" table='tableDataPreview')

  .similar-datasets(ng-hide="!item.related.length")
    h1 Similar Datasets
    ul.related-items.bunsen-list
      li(ng-repeat="related in item.related")
        a(ui-sref="marketPlace.items.item({id: related.id})") {{related.metadata.title}}
