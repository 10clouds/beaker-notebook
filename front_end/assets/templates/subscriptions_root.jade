.subscriptions-root(ng-controller="subscriptionsRoot")
  .sidebar-left.subscriptions-sidebar
    .nav
      input.search.full.subscription-search(ng-model="search", placeholder="Search subscriptions...")

      .sidebar-box.list
        h3 My Datasets
        ul.sidebar-box-list
          li
            span.sidebar-box-list-item All subscribed sets
              span.right {{subscriptions.length}}
          li
            a.sidebar-box-list-link.sort-by.subscription-date(ng-class="sort == 'created_at' && 'active'" ng-click="toggleSort('created_at', true)") By Subscription Date

      a.btn.btn-block.btn-light(ui-sref="marketPlace.items") Find more datasets &raquo;

  .main-content
    h1 My Datasets
    ul.subscription-list
      li.subscription-list-item.base-row-item-green(ng-repeat="subscription in subscriptions | orderBy:sort:sortDescending | filter:search")
        .col-three-quarters
          h2
            a.title(ui-sref="marketPlace.items.item({id: subscription.dataSet.id})") {{subscription.dataSet.title}}
          p.description {{subscription.dataSet.description | words : 30 }}
          ul.property-list.small
            li.purchase-date
              .label Purchase date
              .value {{subscription.created_at | date : 'M/d/yyyy' }}
            li.location
              .label Location
              .value {{subscription.dataSet.remoteFile | dataSetPath}}
        .cl
