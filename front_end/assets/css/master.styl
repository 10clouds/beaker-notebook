*
  box-sizing border-box

body
  background white url('../images/bg-pattern.png') repeat 0 0
  background-size 50px 50px

*[class*=col-]
  float left
  box-sizing border-box
  padding 0 2%
  vertical-align top

.col-quarter
  width: 25%
  &.col-expanded-lrg-display
    @media screen and (min-width: 1400px)
      width 18%

.col-half
  width: 50%
  &.col-expanded-lrg-display
    @media screen and (min-width: 1400px)
      width 64%

.col-three-quarters
  width: 75%

.col-outside
  padding 0

.col-outside-left
  padding-left 0
