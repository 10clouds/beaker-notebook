.ng-modal-overlay
  position fixed
  z-index 9999
  top 0
  left 0
  width 100%
  height 100%
  background-color base-step3
  opacity 0.4

.ng-modal-dialog
  z-index 10000
  position fixed
  width 25%
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background-color #fff
  box-shadow 0px 0px 20px rgba(100,100,100,0.4)
  border-top 4px solid action-blue

.ng-modal-dialog-content
  padding 40px 20px 20px

.ng-modal-close
  position absolute
  top 0
  right 0
  padding 13px 20px
  cursor pointer
  font-size 120%
  display inline-block
  font-family 'arial', 'sans-serif'
  font-weight bold
  color base-step4

modal
  h1
    font-family font-family-primary-bold
    font-size font-size-base + 2px
    margin 0 0 18px 0

  .btn
    float right
    margin-left 20px

  .error
    color red
    margin-bottom 18px
    font-style italic

  section
    margin 0
    &:after
      content ''
      display block
      clear both
