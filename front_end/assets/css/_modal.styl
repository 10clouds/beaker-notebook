.ng-modal-overlay
  position fixed
  z-index 9999
  top 0
  left 0
  width 100%
  height 100%
  background-color base-step3
  opacity 0.4

.ng-modal-dialog
  z-index 10000
  position fixed
  width 25%
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background-color #fff
  box-shadow 0px 0px 20px rgba(100,100,100,0.4)

.ng-modal-dialog-content
  padding 30px 20px 20px

.ng-modal-close
  position absolute
  top 0
  right 0
  padding 3px 5px
  cursor pointer
  font-size 120%
  display inline-block
  font-family 'arial', 'sans-serif'
  color base-step4
