dataset-editor
  display: block
  overflow: hidden
  border: solid 1px #e6e6e6
  background: #FFF
  padding: 20px 0

  input, textarea, select
    width: 100%

  // override date polyfill to show
  // default input contents always
  .btr-dateinput-value[style]
    color: transparent !important

  input[type="date"]
    color: initial !important

  .btn
    padding: 12px 20px
    margin: 10px 0

  label
    margin-top: 15px
    display: block
    margin-bottom: 3px
    font-weight: bold
