.project-detail
  margin-top 5px

.project-name
  margin-top 0
  margin-bottom 33px

  input
    margin-top -3px
    width 300px

.project-menu
  position relative

.project-description
  border 1px solid base-step5
  width 100%
  height 130px
  transition 500ms border-color
  font-size font-size-base
  font-family font-family-primary
  padding spacing-block-small
  &:focus
    border-color action-blue
    outline none

.project-description-display
  word-break break-word

li.notebook-move
  position: relative
  ul
    position: absolute
    left: 70px
    top: 0
    background-color: white
    border: 2px solid black
    width: 200px
    color: black
    li
      padding: 10px 10px
      border-bottom: 2px solid

.error
  font-weight: bold
  color: red
