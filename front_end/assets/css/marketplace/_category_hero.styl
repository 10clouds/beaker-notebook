@import '_variables'

.category-hero
  border 1px solid base-step5
  padding 16px 8px
  background-color white

  p
    width 96%

  .col-three-quarters
    width 70%

  .col-quarter
    width 30%

.category-attributes
  background-color #005C9C
  padding spacing-block

.category-attributes-label,
.category-attributes-label-value
  font-size font-size-base - 2

.category-attributes-label
  text-transform uppercase
  color rgba(white, .6)
  margin-bottom 3px

.category-attributes-label-value
  color white
  margin-bottom 12px
  a
    color white

.total-sets
  font-size font-size-medium
