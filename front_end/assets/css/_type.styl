@import '_variables'

body
  font-size font-size-base
  font-family font-family-primary
  color base-step2

h1
  font-size font-size-largest
  margin 5px 0 22px

h2
  font-size font-size-medium
  margin-bottom 12px
  a
    text-decoration none
    color base-step2
    &:hover
      text-decoration underline
      color base-step2

h4
  font-weight normal
  font-style italic
  color base-step4
  margin 0 0 spacing-block-small + 6 0

a
  color link-color
  text-decoration none
  cursor pointer
  &:hover
    color link-hover-color

p
  line-height font-line-height
  margin-bottom spacing-block-small
  word-wrap break-word

b, strong
  font-family font-family-primary-bold
  font-weight normal

em
  font-style italic

.text-blue
  color action-blue

.text-green
  color action-strong-green

.text-small
  color base-step4
