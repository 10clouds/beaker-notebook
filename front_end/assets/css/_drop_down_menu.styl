.bunsen-dropdown-toggle
  position relative
  cursor pointer
  > .bunsen-dropdown, > .bunsen-dropdown-wrapper
    display none
    position absolute
    left 0
    top 30px
    z-index 15
    &.dropright
      top 0
      left 100%
    &.drop-bottom-left
      left auto
      right 0
      .dropdown-menu
        top 0
        width 100%
        left -100%
  &:hover, &.expanded
    > .bunsen-dropdown, > .bunsen-dropdown-wrapper
      display block

.options
  background-image url(unquote('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAMAAAANCAQAAADGKxxEAAAAFUlEQVQYV2OY+R8EGVApCIRRZCoBAMdFNv06EG21AAAAAElFTkSuQmCC'))
  background-repeat no-repeat
  background-position center
  display inline-block
  height 30px
  width 30px
  &:hover
    background-color action-blue
    background-image url(unquote('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAMAAAANCAQAAADGKxxEAAAAFElEQVQYV2P4DwYMaBQYwinylAAAtj9Bv2dIo9IAAAAASUVORK5CYII='))
  &.light
    background-image url(unquote('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAMAAAANCAQAAADGKxxEAAAAFElEQVQYV2P4DwYMaBQYwinylAAAtj9Bv2dIo9IAAAAASUVORK5CYII='))
    &:hover
      background-color transparent

.bunsen-dropdown-toggle .settings-dropdown
  top 25px
  left auto
  right 0

.settings
  width 25px
  height 25px
  top 8px
  display inline-block
  background url("../images/header/icon-settings.png") no-repeat center
  background-size 15px
  &:hover
    background-color action-blue
  &.light
    &:hover
      background-color transparent

.bunsen-dropdown, .bunsen-dropdown-menu, .dropdown-menu
  background-color white
  box-shadow 1px 1px 6px 1px rgba(17,17,17,0.15)
  min-width 120px
  li
    display block
    padding 0
    margin: 0
    a, span
      text-decoration none
      width 100%
      padding 12px 14px 8px 14px
      color base-step2
      font-size font-size-base
      line-height font-size-base
      display block
    span
      color base-step4
      font-style italic
    a:hover
      background-color action-blue
      color white
      cursor pointer
    .disabled
      color base-step4
      cursor default
      &:hover
        color base-step4
        background-color transparent

.bunsen-dropdown-menu
  max-width 250px

.dropright-arrow:after
  content "\203A"
  position absolute
  font-size 1.2em
  line-height 1.2em
  top 50%
  margin-top -0.6em
  right 11px

.bunsen-dropdown .bunsen-dropdown-wrapper // submenu
  padding-left 4px
