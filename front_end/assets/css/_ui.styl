@import '_variables'

b
  font-family font-family-primary-bold
  font-weight normal

.btn
  color white
  cursor pointer
  display inline-block
  padding 12px 18px 10px 18px
  border none
  font-size font-size-base
  font-family font-family-primary-bold
  background-color action-strong-blue
  text-transform capitalize
  &:hover
    background-color lighten(action-strong-blue, 5%)
  &:active
    background-color darken(action-strong-blue, 5%)
  &.btn-primary
    background-color action-blue
    &:hover
      background-color lighten(action-blue, 5%)
    &:active
      background-color darken(action-blue, 5%)

.btn-group
  margin: 5px 0
  .btn
    margin-right: 5px

.tag
  padding: 4px 7px
  border: solid 1px #111
  border-radius: 3px
  display: inline-block
  font-size: 11px
  margin: 1px
  cursor: pointer

a.active
  font-weight: bold
