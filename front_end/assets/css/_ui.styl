@import '_variables'

.btn
  color white
  cursor pointer
  display inline-block
  padding 12px 18px 10px 18px
  border none
  font-size font-size-base
  background-color action-strong-blue
  text-transform capitalize
  &:hover
    background-color lighten(action-strong-blue, color-adjust-amount)
  &:active
    background-color darken(action-strong-blue, color-adjust-amount)
  &.btn-primary
    background-color action-blue
    &:hover
      background-color lighten(action-blue, color-adjust-amount)
    &:active
      background-color darken(action-blue, color-adjust-amount)
  &.btn-light
    background-color base-step5
    color base-step3
    &:hover
      background-color lighten(base-step5, color-adjust-amount)
    &:active
      background-color darken(base-step5, color-adjust-amount)

.btn-group
  margin: 5px 0
  .btn
    margin-right: 5px

.tag
  color white
  padding 6px 20px 4px 7px
  background action-blue url('../images/small-remove-white.png') no-repeat right 8px center
  background-size 8px 8px
  display inline-block
  font-size font-size-base - 2
  margin 4px 4px 4px 0
  &:hover
    cursor pointer
    background-color lighten(action-blue, 20%)

a.active
  font-weight bold

.base-row-item-green
  background-color white
  padding spacing-block + 6
  margin-bottom spacing-block-small + 6
  border 1px solid base-step5
  border-left 4px solid action-strong-green
