@import '_variables'

.btn
  color white
  cursor pointer
  display inline-block
  padding 12px 18px 10px 18px
  border none
  font-size font-size-base
  background-color action-strong-blue
  text-transform capitalize
  &:hover
    background-color lighten(action-strong-blue, 5%)
  &:active
    background-color darken(action-strong-blue, 5%)
  &.btn-primary
    background-color action-blue
    &:hover
      background-color lighten(action-blue, 5%)
    &:active
      background-color darken(action-blue, 5%)

.btn-group
  margin: 5px 0
  .btn
    margin-right: 5px

.tag
  padding: 4px 7px
  border: solid 1px #111
  border-radius: 3px
  display: inline-block
  font-size font-size-base - 2
  margin: 1px
  cursor: pointer

a.active
  font-weight: bold

.sidebar-box
  box-sizing border-box
  padding spacing-block
  background-color action-strong-blue
  margin-bottom spacing-block

h3.sidebar-box-header
  padding 13px 10px 9px 20px
  background-color action-strong-green
  text-transform uppercase
  font-size font-size-medium - 2
  color white

.related-tag
  display inline-block
  padding 6px 12px 2px 6px
  font-size font-size-base - 1
  background: darken(action-strong-blue, 20%)
  margin 0 8px 8px 0
  position relative
  &:after
    content ''
    position absolute
    background: darken(action-strong-blue, 20%) url('../images/tag-right-arrow.png') no-repeat center center;
    background-size contain
    width 12px
    height 7px
  a
    color white
    text-decoration none
    &:hover
      text-decoration underline

.related-tags-show-all
  text-decoration none
  font-size font-size-base - 1
  color white
  margin-top 12px

.base-row-item-green
  background-color white
  padding spacing-block + 6
  margin-bottom spacing-block-small + 6
  border 1px solid base-step5
  border-left 4px solid action-strong-green
