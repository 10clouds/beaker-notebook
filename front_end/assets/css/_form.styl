@import '_variables'

input, textarea, select
  margin 0
  border 1px solid base-step5
  font-size font-size-base
  font-family inherit
  padding 9px 11px
  outline 0
  color base-step3
  background-color white
  &:focus
    border-color action-blue
  &.full
    width 100%
    margin-bottom spacing-block
    display inline-block

label.full
  display block
  margin-bottom 6px

select
  border-radius 0
  -webkit-appearance none
  background-color base-step5
  border-color darken(base-step5, color-adjust-amount)
  background base-step5 url(unquote('data:image/svg+xml;base64,')) no-repeat right 8px center
  background-repeat no-repea

.search
  background white url('../images/input-search.png') no-repeat 96% center
  background-size 17px 18px
  padding-right 32px
  font-style italic
