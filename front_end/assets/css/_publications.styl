@import "_variables"
@import "_publication_hero.css"

.publications
  .category-hero
    margin-bottom: gutter-width
    color: #FFF
    position: relative
    padding-top: 54px
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7)

    &:before
      content: ''
      position: absolute
      top: 0
      left: 0
      background-image: url("../images/bg-pattern.png")
      width: 100%
      height: 100%

    .category
      padding: 0 gutter-width 0 90px
      position: relative
      z-index: 1

      h2, .quantity
        font-size: 42px
        font-family: font-family-primary

    .category-information
      padding: gutter-width
      margin-top: 36px
      background: rgba(255, 255, 255, 0.2)


      .description, .notebooks
        display: inline-block

      .description
        vertical-align: top
        width: 80%

      .notebooks
        border-left: 1px solid #FFF
        padding-left: gutter-width
        text-align: center
        width: 20%
        box-shadow: inset 1px 0px 0px rgba(0, 0, 0, 0.36)

        .quantity
          margin-top: 8px

.publication
  .destroy-publication
    margin-right: 15px

.publication-categories
  li
    a.active, a:hover
      .count
        color: white

.publication-author
  position relative
  top 3px

.publication-control
  position relative
  bottom 20px
