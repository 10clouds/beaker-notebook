.main-nav
  background-color #EFF2F8
  height 39px
  margin-bottom spacing-block * 3
  box-shadow 0 1px 2px 0 rgba(0,0,0,0.25)

.main-nav-list
  text-align center
  padding-top 11px

.nav-item
  margin 0
  color action-strong-blue
  padding 10px 18px
  font-size font-size-base + 2
  text-decoration none
  &:hover,
  &.nav-item-active
    background-color action-blue
    color white
