.main-nav
  background-color #EFF2F8
  margin-bottom padding-block
  height 40px
  box-shadow 0 1px 2px 0 rgba(0,0,0,0.25)

.main-nav-list
  text-align center
  padding-top 12px

.nav-item
  color action-strong-blue
  padding 8px
  margin 0 5px
  font-size font-size-base - 1
  text-decoration none
  border-bottom 3px solid transparent
  &:hover,
  &.nav-item-active
    border-color action-blue
    color action-blue
