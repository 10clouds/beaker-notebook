!!!
html(ng-app="bunsen")
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    link(rel='stylesheet', href='css/master.css')
    script(src="js/vendor.js", type="text/javascript")
    script(src="js/templates.js", type="text/javascript")
    script(src="js/main.js", type="text/javascript")
  body
    .application(ng-controller="application")
      nav.main-nav
        .col-three-quarters
          a.nav-item.projects(ui-sref="projects.items") My Projects
          a.nav-item.market-place(ui-sref="marketPlace.items") Marketplace
        .sign-out.col-three-quarter
          a.btn(ui-sref="signOut", ng-show='currentUser') Sign out
        .cl
      #root(ui-view="root")
        != content
