{
  "build": [
    {
      "name": "app",
      "path": "app"
    },
    {
      "name": "web",
      "path": "front_end"
    },
    {
      "name": "db",
      "path": "postgres"
    },
    {
      "name": "beaker",
      "path": "beaker"
    }
  ],
  "run": [
    {
      "name": "db",
      "image": "db",
      "ports": [
        "5432:5432"
      ]
    },
    {
      "name": "app",
      "image": "app",
      "command": "--migrate --seed --delay=10",
      "links": [
        "db:db"
      ],
      "ports": [
        "3000:3000"
      ],
      "environment": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "web",
      "image": "web",
      "ports": [
        "8080:8080"
      ]
    },
    {
      "name": "beaker",
      "image": "beaker",
      "ports": [
        "8801:8801"
      ]
    }
  ]
}
