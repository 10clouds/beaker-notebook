{
  "build": [
    {
      "name": "app",
      "path": "app"
    },
    {
      "name": "web",
      "path": "front_end"
    },
    {
      "name": "beaker",
      "path": "beaker"
    }
  ],
  "run": [
    {
      "name": "app",
      "image": "app",
      "command": "--migrate --delay=5",
      "ports": [
        "3000:3000"
      ],
      "environment": {
        "NODE_ENV": "development",
        "DB_PORT_5432_TCP_ADDR": "10.0.1.195"
      },
      "volumes": [
        "/var/bunsen/repos:/var/app/.repos"
      ]
    },
    {
      "name": "web",
      "image": "web",
      "ports": [
        "8080:8080"
      ]
    },
    {
      "name": "beaker",
      "image": "beaker",
      "privileged": true,
      "command": "--bucket=bunsen-development --mount=/var/s3 --role=read-s3",
      "ports": [
        "8801:8801"
      ],
      "volumes": [
        "/mnt/lustre/scratch:/mnt/scratch"
      ]
    }
  ]
}
