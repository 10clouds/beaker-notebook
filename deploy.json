{
  "build": [
    {
      "name": "app",
      "path": "app"
    },
    {
      "name": "web",
      "path": "front_end"
    },
    {
      "name": "db",
      "path": "postgres"
    },
    {
      "name": "beaker",
      "path": "beaker"
    }
  ],
  "run": [
    {
      "name": "db",
      "image": "db",
      "command": "--create --force --database=bunsenDevelopment --run",
      "ports": [
        "5432:5432"
      ]
    },
    {
      "name": "app",
      "image": "app",
      "command": "--migrate --seed --delay=30",
      "links": [
        "db:db"
      ],
      "ports": [
        "3000:3000"
      ],
      "environment": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "web",
      "image": "web",
      "command": "--api_url='http://bunsen.withmojo.com/api/' --beaker_url='http://bunsen.withmojo.com:8801/beaker/'",
      "ports": [
        "8080:8080"
      ]
    },
    {
      "name": "beaker",
      "image": "beaker",
      "privileged": true,
      "command": "--bucket=bunsen-development --mount=/var/s3 --role=read-s3",
      "ports": [
        "8801:8801"
      ]
    }
  ]
}
