{
  "build": [
    {
      "name": "app",
      "path": "app"
    },
    {
      "name": "web",
      "path": "front_end"
    },
    {
      "name": "provisioner",
      "path": "provisioner"
    },
    {
      "name": "beaker",
      "path": "beaker"
    }
  ],
  "run": [
    {
      "name": "provisioner",
      "image": "provisioner",
      "command": "docker.withmojo.com/beaker",
      "ports": [
        "3001:3001"
      ],
      "volumes": [
        "/var/run/docker.sock:/var/run/docker.sock"
      ]
    },
    {
      "name": "app",
      "image": "app",
      "command": "--migrate --delay=5",
      "links": [
        "provisioner:provisioner"
      ],
      "ports": [
        "3000:3000"
      ],
      "environment": {
        "NODE_ENV": "development",
        "DB_PORT_5432_TCP_ADDR": "10.0.1.195"
      },
      "volumes": [
        "/var/bunsen/repos:/var/app/.repos"
      ]
    },
    {
      "name": "web",
      "image": "web",
      "ports": [
        "8080:8080"
      ]
    }
  ]
}
