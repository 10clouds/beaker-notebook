# vi: set ft=nginx :

server {
  listen 80 default_server;

  root /var/www/;
  index index.html;

  sendfile off;

  location / {
    try_files $uri $uri/ =404;
  }

  location /api/v1/metadata {
    if ($args ~* "^page=(\d+)") {
        set $page $1;
        set $args '';
        rewrite ^.*$ /sample_datasets_$page.json last;
    }
  }

}
