BEAKER_IPYTHON=ipython

while [ -n "$1" ]
do
    case "$1" in
        --path*) BEAKER_IPYTHON="${1#??????}"; shift;;
        *) break;;
    esac
done

exec $BEAKER_IPYTHON notebook --pylab inline --IPKernelApp.pylab='inline' --NotebookApp.ip=127.0.0.1 --NotebookApp.port=$1 --NotebookApp.open_browser=False
