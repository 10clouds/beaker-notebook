!!!
html(ng-app="bunsen")
  head
    title Bunsen

    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')

    // we include katex styles here so it can require its font files relatively
    link(rel='stylesheet', href='js/beaker/vendor/katex-build/katex.min.css')
    link(rel='stylesheet', href='css/beaker-sandbox.css')
    link(rel='stylesheet', href='css/master.css')
    link(rel='stylesheet', href='css/vendor.css')

    script(src="js/beaker/beakerVendor.js", type="text/javascript")
    script(src="js/beaker/beakerOutputDisplayVendor.js", type="text/javascript")
    script(src="js/beaker/vendor/requirejs/require.js", type="text/javascript",  data-main="js/ipython3Paths.js")

    script(src="js/beaker/beakerApp.js", type="text/javascript")
    script(src="js/beakerPreEmbed.js", type="text/javascript")
    script(src="js/beaker/beakerConfig.js", type="text/javascript")
    script(src="js/beaker/beakerOutputDisplay.js", type="text/javascript")
    script(src="js/beakerEmbed.js", type="text/javascript")

    script(src="js/vendor.js", type="text/javascript")
    script(src="js/templates.js", type="text/javascript")
    script(src="js/main.js", type="text/javascript")

  body(ng-controller="application" ng-class="$state.current.name" ng-cloak)
    include _app_header
    nav.main-nav
      .contain(ng-show='$session.user')
        ul.main-nav-list.list-inline
          li
            a.nav-item.projects(ui-sref-active='nav-item-active', ui-sref="projects.items") My Projects
          li
            a.nav-item.subscriptions(ui-sref-active='nav-item-active', ui-sref="subscriptions.items") My Datasets
          li
            a.nav-item.market-place(ui-sref-active='nav-item-active', ui-sref="marketPlace.items") Marketplace
          li
            a.nav-item.publications(ui-sref-active='nav-item-active', ui-sref="publications.items") Publications
          li(ng-show="isUserAdmin")
            a.nav-item.admin(ui-sref-active='nav-item-active', ui-sref="admin.index") Admin
        .cl
    #beaker-container.contain
      #root(ui-view="root")
        != content
      beakernotebook#beakernotebook(ng-show="showingNotebook()")
    modal(ng-show="modalShown")
