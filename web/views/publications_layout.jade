!!!
html(ng-app="publications")
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    // we include katex styles here so it can require its font files relatively
    link(rel='stylesheet', href='js/beaker/vendor/katex-build/katex.min.css')
    link(rel='stylesheet', href='css/beaker-sandbox.css')
    link(rel='stylesheet', href='css/master.css')
    link(rel='stylesheet', href='css/vendor.css')

    script(src="js/beaker/beakerVendor.js", type="text/javascript")
    script(src="js/beaker/beakerOutputDisplayVendor.js", type="text/javascript")
    script(src="js/beaker/vendor/requirejs/require.js", type="text/javascript",  data-main="js/ipython3Paths.js")

    script(src="js/beaker/beakerApp.js", type="text/javascript")
    script(src="js/beakerPreEmbed.js", type="text/javascript")
    script(src="js/beaker/beakerConfig.js", type="text/javascript")
    script(src="js/beaker/beakerOutputDisplay.js", type="text/javascript")
    script(src="js/beakerEmbed.js", type="text/javascript")

    script(src="js/publications_vendor.js", type="text/javascript")
    script(src="js/templates.js", type="text/javascript")
    script(src="js/publications_main.js", type="text/javascript")

  body
    .application(ng-controller="application" ng-class="$state.current.name")
      include _publications_header
      nav.main-nav

      #beaker-container.contain
        #root(ui-view="root")
          != content
      modal(ng-show="modalShown")
