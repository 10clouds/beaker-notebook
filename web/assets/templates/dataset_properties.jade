section.properties
  h1 Properties

  ul.property-list
    li(ng-repeat="(key, value) in item.filteredMeta")
      .label {{key | _.str: 'humanize'}}
      .value(ng-class="'dataset-' + (key | _.str: 'dasherize')") {{value}}

    li(ng-if="item.category")
      .label category
      .value.dataset-categories {{item.category.name}}

    li(ng-if="item.tags")
      .label tags
      .value.dataset-tags
       span(ng-repeat="tag in item.tags") {{tag}}{{$last ? '' : ', '}}
