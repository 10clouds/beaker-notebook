.notebook
  .loading
    text-align: center
    .message
      display: inline-block
      padding: 120px
    .spinner
      position relative
      top 150px

// This isn't ideal since we want these styles to be in
// embeddable beaker.
#beaker-container.fullscreen
  padding: 0 20px
  width: 100%

  .roots
    max-width: 100%

.beaker-sandbox
  .notebook-container
    padding 0

  .fullscreen & .row
    margin-left 0
    margin-right 0
