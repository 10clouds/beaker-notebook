.header-nav
  background: #6fc21d
  margin-bottom: -56px
  z-index: 1

  .content
    padding: 0

  // Remove whitespace between tags
  ul
    font-size: 0

  ul li
    font-size: 14px
    color: #FFF
    text-transform: uppercase
    width: 14.285%
    display: inline-block
    text-align: center
    position: relative
    padding: 21px 0
    cursor: pointer
    -webkit-font-smoothing: antialiased

    &:hover
      background: darken(#6fc21d, 5%)

    a, a:visited
      font-family: pt-sans, Helvetica, sans-serif
      font-size: 12px
      text-decoration: none
      color: #FFF
      font-weight: 600

    &.active
      &:before
        content: ""
        position: absolute
        top: 100%
        left: 50%
        width: 0
        height: 0
        border-left: 20px solid transparent
        border-right: 20px solid transparent
        border-top: 15px solid #6fc21d
        transform: translateX(-50%)

      &:hover
        &:before
          border-top: 15px solid darken(#6fc21d, 5%)
