.project-name
  input
    width 420px
    margin 0
    font-size font-size-medium
    font-weight bold
    padding-top 6px
    padding-bottom 6px

.project-name,
.update-project-top-btn
  display inline-block
  float left
  margin 0 0 22px

.update-project-top-btn
  margin-left spacing-block - 4
  padding-top 15px
  padding-bottom 10px
  position relative

.project-menu
  position relative

.project-description
  border 1px solid base-step5
  width 100%
  height 130px
  font-size font-size-base
  padding spacing-block-small
  &:focus
    border-color action-blue
    outline none

.project-description-display
  word-break break-word

li.notebook-move
  position: relative
  ul
    position: absolute
    left: 70px
    top: 0
    background-color: white
    border: 2px solid black
    width: 200px
    color: black
    li
      padding: 10px 10px
      border-bottom: 2px solid

.char-count-container
  position relative
  .char-count
    position absolute
    bottom -44px
    right 0

